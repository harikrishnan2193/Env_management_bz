<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head', { title: isRegisterPath ? 'Register' :
    'Login'}) %>
    <style></style>
  </head>

  <body class="h-screen">
    <%- include('partials/loading-indicator') %>

    <div class="main-content">
      <main class="relative h-screen overflow-hidden">
        <!-- FORM -->
        <div
          class="auth-container absolute inset-0 flex justify-center items-center z-10"
        >
          <div class="border-2 w-96 rounded-md">
            <div class="auth-form p-8 shadow-lg bg-white">
              <img
                src="https://cdn-icons-png.flaticon.com/512/309/309492.png"
                alt="no image"
                class="mx-auto mb-4 w-14"
              />
              <h3 class="text-2xl font-bold text-center mb-4">
                Welcome <%= isRegisterPath ? 'User' : 'Back' %>
              </h3>

              <!-- Login or Register Form -->
              <form
                id="authForm"
                action="<%= isRegisterPath ? '/register' : '/login' %>"
                method="POST"
              >
                <% if (isRegisterPath) { %>
                <div class="input-group mb-4">
                  <label
                    for="username"
                    class="block text-gray-700 font-semibold mb-1"
                  >
                    Name
                  </label>
                  <input
                    type="text"
                    name="username"
                    id="username"
                    required
                    placeholder="Enter your name"
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500"
                  />
                  <span id="usernameError" class="text-red-500 hidden text-sm">
                    Username cannot exceed 30 characters
                  </span>
                </div>
                <% } %>

                <div class="input-group mb-4">
                  <label
                    for="email"
                    class="block text-gray-700 font-semibold mb-1"
                    >Email</label
                  >
                  <input
                    type="email"
                    name="email"
                    id="email"
                    required
                    placeholder="Enter your email"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                  />
                  <span id="emailError" class="text-red-500 hidden text-sm"
                    >Invalid email format</span
                  >
                </div>

                <% if (isRegisterPath) { %>
                <div class="input-group mb-6">
                  <label
                    for="organization"
                    class="block text-gray-700 font-semibold"
                  >
                    Organization Name
                  </label>
                  <input
                    type="text"
                    name="organization"
                    id="organization"
                    required
                    placeholder="Enter your organization"
                    value="<%= organization ? organization.organization_name : '' %>"
                    readonly
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                  />
                </div>

                <input
                  type="hidden"
                  name="organization_id"
                  value="<%= organization ? organization.organization_id : '' %>"
                />
                <% } %>

                <div class="input-group mb-6">
                  <label
                    for="password"
                    class="block text-gray-700 font-semibold mb-1"
                    >Password</label
                  >
                  <input
                    type="password"
                    name="password"
                    id="password"
                    required
                    placeholder="Enter your password"
                    class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
                  />
                  <span id="passwordError" class="text-red-500 hidden text-sm">
                    Password must be at least 8 characters long
                  </span>
                </div>

                <div class="flex justify-center mb-6 relative">
                  <button
                    type="submit"
                    class="w-full py-2 bg-orange-400 text-white rounded-lg transition duration-300 ease-in-out hover:bg-orange-500"
                  >
                    <span><%= isRegisterPath ? 'Sign Up' : 'Login' %></span>
                  </button>
                </div>

                <p class="text-center text-gray-600">
                  <% if (isRegisterPath) { %> Already have an account?
                  <a href="/" class="text-orange-500 hover:underline">Login</a>
                  <% } else { %> Don't have an account?
                  <a href="/register" class="text-orange-500 hover:underline"
                    >Sign Up</a
                  >
                  <% } %>
                </p>
              </form>
            </div>
          </div>
        </div>
      </main>
    </div>

    <% if (typeof organization !=='undefined' && organization) { %>
    <script>
      const organizationId = "<%= organization.organization_id %>";
      if (organizationId) {
        sessionStorage.setItem("organization_id", organizationId);
      }
    </script>
    <% } %>

    <script>
      const error =  <%- JSON.stringify(error) %>;
      const success =  <%- JSON.stringify(success) %>;

      // success and error message using toastr
      toastr.options = {
        timeOut: "1000",
      };

      if (success && success.length > 0) {
        toastr.success(success[0]);
      }

      if (error && error.length > 0) {
        toastr.error(error[0]);
      }
    </script>

    <script>
      function validateForm() {
        const username = document.getElementById("username").value.trim();
        const email = document.getElementById("email").value.trim();
        const password = document.getElementById("password").value.trim();

        const usernameError = document.getElementById("usernameError");
        const emailError = document.getElementById("emailError");
        const passwordError = document.getElementById("passwordError");

        let isValid = true;

        // Reset error messages
        usernameError.classList.add("hidden");
        emailError.classList.add("hidden");
        passwordError.classList.add("hidden");

        //validate username
        if (username.length > 30) {
          usernameError.classList.remove("hidden");
          isValid = false;
        }

        // Validate email
        const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailPattern.test(email)) {
          emailError.classList.remove("hidden");
          isValid = false;
        }

        // Validate password length
        if (password.length < 8) {
          passwordError.classList.remove("hidden");
          isValid = false;
        }

        return isValid; // Prevent form submission if invalid
      }
    </script>

    <script src="/js/loading-indicator.js"></script>
  </body>
</html>
