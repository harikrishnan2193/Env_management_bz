<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head', { title: "Reset Password"}) %>
  </head>

  <body class="flex items-center justify-center min-h-screen">
    <div class="bg-light_grey p-8 rounded shadow-md w-full max-w-md">
      <h1 class="text-2xl font-bold text-secondary text-center mb-6">
        Reset Password
      </h1>

      <form action="/reset-password/<%= token %>" method="POST">
        <div class="mb-4">
          <label for="password" class="block text-gray-600 font-medium mb-2"
            >New Password</label
          >
          <input
            type="password"
            name="password"
            id="password"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
            placeholder="Enter your new password"
            required
          />
        </div>

        <div class="mb-6">
          <label
            for="confirmPassword"
            class="block text-darker_grey font-medium mb-2"
            >Confirm New Password</label
          >
          <input
            type="password"
            name="confirmPassword"
            id="confirmPassword"
            class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
            placeholder="Confirm your new password"
            required
          />
        </div>

        <button
          type="submit"
          class="w-full bg-primary text-light_grey py-2 px-4 rounded-md hover:bg-primary_hover transition duration-300"
        >
          Reset Password
        </button>
      </form>
    </div>

    <script>
      const error =  <%- JSON.stringify(error) %>;
      const success =  <%- JSON.stringify(success) %>;

      console.log(success);
      console.log(error);
      // success and error message using toastr
      toastr.options = {
        timeOut: "2000",
      };

      if (success && success.length > 0) {
        toastr.success(success[0]);
      }

      if (error && error.length > 0) {
        toastr.error(error[0]);
      }
    </script>
  </body>
</html>
