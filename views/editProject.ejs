<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head', { title: "Edit Project"}) %>
  </head>

  <body class="">
    <%- include('partials/loading-indicator') %>

    <div class="main-content">
      <div class="flex flex-col items-center justify-center space-y-6 mt-20">
        <!-- Form Section -->
        <div
          class="w-11/12 md:w-[500px] bg-white text-black p-6 shadow-lg rounded-lg"
        >
        <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">
          Edit Project
        </h2>

        <!-- Form -->
        <form action="/project/update" method="POST" class="space-y-5 edit-project-form">
          <% projectDetils.forEach(project=> { %>
          <!-- Project Name Input -->
          <div class="relative">
            <label for="name" class="block text-gray-700 font-semibold mb-2"
              >Project Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              value="<%= project.project_name %>"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm"
            />
          </div>

          <!-- Project Description Input -->
          <div class="relative">
            <label
              for="description"
              class="block text-gray-700 font-semibold mb-2"
              >Project Description</label
            >
            <textarea
            id="description"
            name="description"
            required
            class="w-full border border-gray-300 rounded-md h-32 px-4 py-2"
          >
          </textarea>
          
          </div>

          <!-- Technology Input -->
          <div class="relative">
            <label
              for="technology"
              class="block text-gray-700 font-semibold mb-2"
              >Technology</label
            >
            <input
              type="text"
              id="technology"
              name="technology"
              value="<%= project.technology %>"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm"
            />
          </div>

          <input
            type="hidden"
            name="project_id"
            value="<%= project.project_id %>"
          />

          <!-- Status Dropdown -->
          <div class="relative">
            <label for="status" class="block text-gray-700 font-semibold mb-2"
              >Status</label
            >
            <select
              id="status"
              name="status"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:outline-none focus:ring-orange-500"
            >
              <option value="" disabled>Select status</option>
            <% status.forEach((statuses)=> { %>
                <option value="<%= statuses.status_id %>"
                    <%=projectDetils[0].status_id===statuses.status_id ? 'selected' : '' %>>
                    <%= statuses.status_name %>
                </option>
                <% }) %>
            </select>

          </div>

          <% }) %>

          <!-- Submit Button -->
          <div class="flex justify-center">
            <button
              type="submit"
              class="bg-orange-400 hover:bg-orange-500 hover:text-gray-800 text-white px-4 py-2 rounded-md w-1/2""
            >
              Update Project
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>



  <script src="/js/loading-indicator.js"></script>

  <!-- Trimming Description -->
  <script>
    const  originalDescription = <%- JSON.stringify(projectDetils[0].description) %>;
    const trimmedDescription = originalDescription.trim();
    document.getElementById("description").textContent = trimmedDescription;
</script>
  </body>
</html>
