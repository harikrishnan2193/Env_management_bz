<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head', { title: "Profile" }) %>
  </head>
  <body>
    <div class="flex items-center justify-center min-h-screen relative">
      <div
        class="bg-white shadow-lg rounded-lg p-6 md:p-10 w-full max-w-md text-center"
      >
        <h1 class="text-xl md:text-2xl font-bold mb-6">Profile</h1>
        <p class="text-lg md:text-xl">
          Email:
          <span id="email" class="font-semibold">Loading...</span>
        </p>
        <p class="text-lg md:text-xl mt-4 capitalize">
          Username:
          <span id="username" class="font-semibold">Loading.....</span>
        </p>
      </div>
    </div>

    <script>
      async function fetchUserData() {
        try {
          const response = await fetch("/api/profile");

          if (response.ok) {
            const data = await response.json();
            document.getElementById("email").textContent = data.email;
            document.getElementById("username").textContent = data.username;
          } else {
            const errorData = await response.json();
            console.error("Error fetching user data:", errorData.error);
          }
        } catch (error) {
          console.error("Error fetching profile data:", error);
        }
      }

      window.onload = fetchUserData;
    </script>
  </body>
</html>
